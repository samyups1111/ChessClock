<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#F3417D">

    <TextView
            android:id="@+id/Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_sammy_s_n_chess_clock_app"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_light_nodisable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/oneMin"/>

    <Button
            android:text="@string/_1_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oneMin"
            android:backgroundTint="@android:color/holo_green_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Welcome"
            app:layout_constraintBottom_toTopOf="@+id/fiveMin"/>
    <Button
            android:text="@string/_5_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fiveMin"
            android:backgroundTint="@android:color/holo_green_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneMin"
            app:layout_constraintBottom_toTopOf="@+id/thirtyMin"/>


    <Button
            android:text="@string/_30_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thirtyMin"
            android:backgroundTint="@android:color/holo_green_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fiveMin"
            app:layout_constraintBottom_toTopOf="@+id/customTime"/>


    <Button
            android:text="@string/custom_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customTime"
            android:backgroundTint="@android:color/holo_green_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/thirtyMin"/>


</androidx.constraintlayout.widget.ConstraintLayout>